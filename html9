<body>
  <h1 id="baslik">Butona bas</h1>
  <button class="button" id="buton">Tıkla beni</button>

  <script>
    const btn = document.getElementById('buton');
    const baslik = document.getElementById('baslik');
    btn.addEventListener('click', () => {
      baslik.textContent = 'Butona tıkladınız! ' + new Date().toLocaleTimeString();
    });
  </script>
